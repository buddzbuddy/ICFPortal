@model IEnumerable<IdentitySample.Models.ServiceOrganization>

@{
    ViewBag.Title = "База данных – реестр реабилитационных  услуг";
}

<h2>База данных – реестр реабилитационных  услуг</h2>

<p>
    @Html.ActionLink("Добавить организацию", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceTypes.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisabilityTypes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManagerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrgStaffs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StaffPositionsCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinanceSource)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Открыть", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <ul>
                @foreach (var s in item.ServiceTypes)
                {
                    <li>@s.Name</li>
                }
            </ul>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisabilityTypes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ages)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManagerName)
        </td>
        <td>
            <ul>
                @foreach (var s in item.OrgStaffs)
                {
                    <li>@s.Name</li>
                }
            </ul>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StaffPositionsCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FinanceSource)
        </td>
    </tr>
}

</table>
