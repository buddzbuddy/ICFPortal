@model IEnumerable<IdentitySample.Models.Product>

@{
    ViewBag.Title = "Справочник товаров/изделий";
}

<h2>Справочник товаров/изделий</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsMedical)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsMedical)
        </td>
        <td>
            @if (User.IsInRole("Admin"))
            {
                <text>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </text>
            }
        </td>
    </tr>
}

</table>
