@model IEnumerable<IdentitySample.Models.ParentCase>

@{
    ViewBag.Title = "Список анкет для оценки активности и способности участия ребенка";
}

<h2>Список анкет для оценки активности и способности участия ребенка</h2>

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Patient.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patient.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patient.MiddleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patient.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FilledPlaceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FilledDate)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Открыть", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.MiddleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.BirthDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FilledPlaceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FilledDate)
        </td>
    </tr>
}

</table>
