@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Информация о пользователе";
    var usrList = ViewBag.UsrList as IEnumerable<CissaMeta.UsrInfo>;
}

<h2>Информация о пользователе</h2>

<div>
    <h4>Пользователь</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<h4>Роли пользователя</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <p>---</p>
}

<table class="table">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>


<h4>Компания / Юридическое лицо / ИП</h4>
@if (Model.Companies == null || Model.Companies.Count == 0)
{
    <hr />
    <p>Данные не найдены</p>
}
else
{
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Companies.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies.First().Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies.First().OrgId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies.First().INN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies.First().OKPO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies.First().ActivityType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies.First().Telephone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies.First().BankName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies.First().BIK)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies.First().BankAccountNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Companies.First().CompanyAccountNo)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Companies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @if (item.OrgId != null && usrList != null)
                        {
                            var org = usrList.FirstOrDefault(x => x.Id == item.OrgId);
                            if (org != null)
                            {
                                @org.Name
                            }
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.INN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OKPO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActivityType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BankName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BIK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BankAccountNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyAccountNo)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



